<section id="main-content">
    <section class="wrapper">
        <div class="row" id="projectViewModel" >
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                    Affiliates Details
                    </header>
                    <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group prepend-icon">
                                        <label for="Project_Description" >Affiliate title</label>
                                        <p><%= @project.title%></p>
                                    </div>
                                    <div class="form-group prepend-icon">
                                        <label for="Project_Description" >Affiliate User</label>
                                        <p><%= @project&.authors&.last.first_name  + ' ' + @project.authors&.last&.last_name if @project.authors.present? %></p>
                                    </div>
                                     <div class="form-group prepend-icon">
                                        <label for="Project_Description" >Affiliate Description</label>
                                        <p><%= @project.description %></p>
                                    </div>
                                    <div >
                                        <a class="btn btn-shadow btn-primary" href="/Researcher"> Back </a>
                                    </div>
                                </div>
                            </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

